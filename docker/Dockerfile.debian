WORKDIR /build

RUN cargo install cargo-deb
COPY . .

RUN cargo deb 

RUN ls -l target/debian/

# Validate installation package
RUN apt install ./target/debian/solhat-egui_${SOLHATUI_VERSION}_amd64.deb 

